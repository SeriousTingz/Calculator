<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.me.calculator.MainActivity">

    <EditText
        android:id="@+id/number1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Number 1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteY="16dp"
        tools:layout_editor_absoluteX="7dp"
        android:layout_marginLeft="15dp" />

    <EditText
        android:id="@+id/number2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Number 2"
        android:layout_alignLeft="@+id/number1"
        android:layout_alignStart="@+id/number1"
        android:layout_below="@+id/number1"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteY="65dp"
        tools:layout_editor_absoluteX="7dp" />

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Result"
        tools:layout_editor_absoluteY="49dp"
        tools:layout_editor_absoluteX="280dp"
        android:layout_below="@+id/number2"
        android:layout_alignLeft="@+id/number2"
        android:layout_alignStart="@+id/number2"
        android:layout_marginTop="31dp" />

    <Button
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/result"
        android:layout_alignStart="@+id/result"
        android:layout_below="@+id/result"
        android:text="Add"
        tools:layout_editor_absoluteY="182dp"
        tools:layout_editor_absoluteX="291dp" />

    <Button
        android:id="@+id/subtract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/add"
        android:layout_alignStart="@+id/add"
        android:layout_below="@+id/add"
        android:text="Subtract"
        tools:layout_editor_absoluteY="182dp"
        tools:layout_editor_absoluteX="195dp" />

    <Button
        android:id="@+id/multiply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Multiply"
        android:layout_below="@+id/subtract"
        android:layout_alignLeft="@+id/subtract"
        android:layout_alignStart="@+id/subtract"
        tools:layout_editor_absoluteY="182dp"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/divide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/multiply"
        android:layout_alignStart="@+id/multiply"
        android:layout_below="@+id/multiply"
        android:text="Divide"
        tools:layout_editor_absoluteY="182dp"
        tools:layout_editor_absoluteX="107dp" />
</RelativeLayout>
